    <script>
        function countdownTimer() {
            const anniversaryDate = new Date("June 9, 2025 00:00:00").getTime();
            const now = new Date().getTime();
            const distance = anniversaryDate - now;
            
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("countdown-timer").innerText = `${days}d ${hours}h ${minutes}m ${seconds}s left!`;
        }
        setInterval(countdownTimer, 1000);

        function submitQuiz() {
            // Correct answers
            const correctAnswers = {
                question1: "April 23, 2003",
                question2: "Darlin",
                question3: "Jeans",
                question4: "Blood red",
                question5: "Katie",
                question6: "Ranger",
                question7: "Star",
                question8: "Murphy"
            };

            // Get user inputs
            const userAnswers = {
                question1: document.getElementById("question1").value,
                question2: document.getElementById("question2").value,
                question3: document.getElementById("question3").value,
                question4: document.getElementById("question4").value,
                question5: document.getElementById("question5").value,
                question6: document.getElementById("question6").value,
                question7: document.getElementById("question7").value,
                question8: document.getElementById("question8").value
            };

            // Check answers
            let score = 0;
            for (let key in correctAnswers) {
                if (userAnswers[key].toLowerCase() === correctAnswers[key].toLowerCase()) {
                    score++;
                }
            }

            // Display results
            const resultText = `You got ${score} out of 8 correct!`;
            const resultMessage = score === 8 ? "Perfect! You know me better than anyone! üíñ" : "Good try! You‚Äôre getting closer! ‚ù§Ô∏è";

            document.getElementById("quiz-result").innerHTML = `${resultText}<br>${resultMessage}`;
        }
    </script>
